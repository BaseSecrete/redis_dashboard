<div class="card">
  <table>
    <tbody>
      <% for (key,value) in stats %>
        <tr>
          <td class="key"><%= key %></td>
          <td>
            <% if value.is_a?(Hash) %>
              <% for (sub_key, sub_value) in value %>
                <%= "#{sub_key}: #{sub_value}" %><br/>
              <% end %>
            <% else %>
              <%= value %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div role="alert">
  <a href="https://redis.io/commands/memory-stats" target="_blank" rel="noopener nofollower">
    Redis memory stats documentation
  </a>
</div>
